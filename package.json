{
  "name": "tempmail-app",
  "version": "1.0.0",
  "description": "Temporary email service with history and custom naming",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "setup": "node setup.js",
    "verify": "node verify-setup.js",
    "test-email": "node test-email.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["tempmail", "temporary-email", "disposable-email"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "mailparser": "^3.6.5",
    "smtp-server": "^3.13.0",
    "nodemailer": "^6.9.7",
    "body-parser": "^1.20.2",
    "socket.io": "^4.6.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
